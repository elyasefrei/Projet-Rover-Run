#include <stdio.h>
#include "map.h"
#include "tree.h"
#include <time.h>
#include <stdlib.h>
#include "moves.h"
#include "loc.h"

int main() {


    t_map map = createMapFromFile("..\\maps\\example1.map");
    printf("Map created with dimensions %d x %d\n", map.y_max, map.x_max);
    for (int i = 0; i < map.y_max; i++)
    {
        for (int j = 0; j < map.x_max; j++)
        {
            printf("%d ", map.soils[i][j]);
        }
        printf("\n");
    }
    // printf the costs, aligned left 5 digits
    for (int i = 0; i < map.y_max; i++)
    {
        for (int j = 0; j < map.x_max; j++)
        {
            printf("%-5d ", map.costs[i][j]);
        }
        printf("\n");
    }
    displayMap(map);


    t_node *root = create_node(0, NBR_MVT, NULL); // Racine de l'arbre avec 3 mouvements possibles
    create_children(root);  // Création récursive des enfants
    t_node *parent_fictif=create_node(0,1,NULL);
    root->parent=parent_fictif;

    printf("Arbre creer jusqu'a une profondeur de %d.\n", MAX_DEPTH);
    srand(time(NULL));


    int* tableau_aleatoire = mouvement_aleatoire(NBR_MVT);
    for (int i = 0; i < NBR_MVT; i++) {
        printf("mouvement %d %d\n",i, tableau_aleatoire[i]);
    }
    t_localisation robot=loc_init(5,4,NORTH);

    remplir_arbre(root,robot,&map,tableau_aleatoire);
    t_node** tableau=malloc(sizeof(t_node*) * calculer_total_noeuds(NBR_MVT));

    int compteur=0;
    dfs(root,tableau,&compteur);
    t_node* Bestnode=low_node(tableau,compteur);
    printf("VALEUR %d",Bestnode->value);

    free(tableau_aleatoire);
printTree(root);

    return 0;
}
